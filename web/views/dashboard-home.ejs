<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Principal - <%= guild.name %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="navbar-brand">üìä <%= guild.name %></div>
    <div class="navbar-user">
      <div class="user-badge">
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar" class="user-avatar">
        <span><%= user.username %></span>
      </div>
      <a href="/auth/logout" class="btn btn-secondary btn-sm">Salir</a>
    </div>
  </nav>

  <div class="dashboard-wrapper">
    <%- include('sidebar', { guild, guildId: guild.id }) %>

    <main class="main-content">
      <!-- Header -->
      <div class="page-header">
        <h1>Panel de Control</h1>
        <p>Bienvenido a tu dashboard de administraci√≥n</p>
      </div>

      <!-- Informaci√≥n del Servidor -->
      <div class="section">
        <h2 class="section-title">Informaci√≥n del Servidor</h2>
        <div class="server-info-card">
          <div class="server-info-left">
            <% if (guild.icon) { %>
              <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %>" class="server-large-avatar">
            <% } else { %>
              <div class="server-large-avatar-placeholder"><%= guild.name.charAt(0) %></div>
            <% } %>
          </div>
          <div class="server-info-right">
            <div class="info-group">
              <h3><%= guild.name %></h3>
              <p class="text-gray-400">ID: <code><%= guild.id %></code></p>
            </div>
            <div class="info-row">
              <div class="info-stat">
                <span class="info-label">üë• Miembros</span>
                <span class="info-value"><%= guild.approximate_member_count || 0 %></span>
              </div>
              <div class="info-stat">
                <span class="info-label">üü¢ Online</span>
                <span class="info-value">-</span>
              </div>
              <div class="info-stat">
                <span class="info-label">‚öôÔ∏è Estado</span>
                <span class="info-value" style="color: #00d084;">Activo</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">üéÆ</div>
          <div class="stat-content">
            <p class="stat-label">Salas Activas</p>
            <h3 class="stat-value"><%= activeRooms || 0 %></h3>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">üë•</div>
          <div class="stat-content">
            <p class="stat-label">Jugadores</p>
            <h3 class="stat-value"><%= totalPlayers || 0 %></h3>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">üèÜ</div>
          <div class="stat-content">
            <p class="stat-label">Torneos Activos</p>
            <h3 class="stat-value"><%= activeTournaments || 0 %></h3>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">üì¢</div>
          <div class="stat-content">
            <p class="stat-label">Anuncios Hoy</p>
            <h3 class="stat-value"><%= announcementsToday || 0 %></h3>
          </div>
        </div>
      </div>

      <!-- Bot Status & Recent Activity -->
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
        <!-- Bot Status -->
        <div class="section">
          <h2 class="section-title">Estado del Bot</h2>
          <div class="bot-status">
            <div class="status-item">
              <span class="status-label">Estado</span>
              <span class="status-value status-online">üü¢ Online</span>
            </div>
            <div class="status-item">
              <span class="status-label">Ping</span>
              <span class="status-value">45ms</span>
            </div>
            <div class="status-item">
              <span class="status-label">Uptime</span>
              <span class="status-value">2d 5h 32m</span>
            </div>
            <div class="status-item">
              <span class="status-label">Versi√≥n</span>
              <span class="status-value">v2.1.0</span>
            </div>
          </div>
        </div>

        <!-- Last Sync -->
        <div class="section">
          <h2 class="section-title">Sincronizaci√≥n</h2>
          <div class="sync-info">
            <div class="sync-item">
              <span>√öltima sincronizaci√≥n</span>
              <span class="sync-time"><%= new Date().toLocaleTimeString('es-ES') %></span>
            </div>
            <div class="sync-item">
              <span>Base de datos</span>
              <span class="sync-status">‚úÖ Conectada</span>
            </div>
            <div class="sync-item">
              <span>Discord API</span>
              <span class="sync-status">‚úÖ Activa</span>
            </div>
            <button class="btn btn-primary" style="width: 100%; margin-top: 10px;">‚ü≥ Sincronizar Ahora</button>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="section">
        <h2 class="section-title">Actividad Reciente</h2>
        <div class="activity-feed">
          <% if (recentLogs && recentLogs.length > 0) { %>
            <% recentLogs.forEach(log => { %>
              <div class="activity-item">
                <span class="activity-time"><%= new Date(log.created_at).toLocaleTimeString('es-ES') %></span>
                <span class="activity-action"><%= log.action %></span>
                <span class="activity-user"><%= log.user %></span>
                <span class="activity-detail"><%= log.details %></span>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-gray-400">No hay actividad reciente</p>
          <% } %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="section">
        <h2 class="section-title">Acciones R√°pidas</h2>
        <div class="action-grid">
          <a href="/dashboard/<%= guild.id %>/rooms" class="action-btn action-btn-rooms">
            <span class="icon">üéÆ</span>
            <span>Crear Sala</span>
          </a>
          <a href="/dashboard/<%= guild.id %>/announcements" class="action-btn action-btn-announce">
            <span class="icon">üì¢</span>
            <span>Enviar Anuncio</span>
          </a>
          <a href="/dashboard/<%= guild.id %>/settings" class="action-btn action-btn-settings">
            <span class="icon">‚öôÔ∏è</span>
            <span>Configuraci√≥n</span>
          </a>
          <a href="/dashboard/<%= guild.id %>/roles" class="action-btn action-btn-roles">
            <span class="icon">üë•</span>
            <span>Gestionar Roles</span>
          </a>
        </div>
      </div>
    </main>
  </div>

  <style>
    .server-info-card {
      background: var(--secondary);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 25px;
      display: flex;
      gap: 25px;
      align-items: center;
    }

    .server-info-left {
      flex-shrink: 0;
    }

    .server-large-avatar, .server-large-avatar-placeholder {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: var(--primary);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 48px;
      font-weight: bold;
      overflow: hidden;
    }

    .server-large-avatar {
      object-fit: cover;
    }

    .server-info-right {
      flex: 1;
    }

    .server-info-right h3 {
      font-size: 24px;
      margin: 0 0 8px 0;
    }

    .info-group {
      margin-bottom: 20px;
    }

    .info-row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .info-stat {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .info-label {
      font-size: 12px;
      color: var(--text-secondary);
      text-transform: uppercase;
      font-weight: 600;
    }

    .info-value {
      font-size: 18px;
      font-weight: 700;
      color: white;
    }

    .bot-status, .sync-info {
      background: var(--primary);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .status-item, .sync-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid var(--border);
    }

    .status-item:last-child, .sync-item:last-child {
      border-bottom: none;
    }

    .status-label {
      font-size: 12px;
      color: var(--text-secondary);
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-value, .sync-status, .sync-time {
      font-weight: 600;
      color: white;
    }

    .status-online {
      color: #00d084;
    }

    .sync-status {
      color: #00d084;
    }

    .activity-feed {
      background: var(--primary);
      border: 1px solid var(--border);
      border-radius: 8px;
      max-height: 400px;
      overflow-y: auto;
    }

    .activity-item {
      padding: 12px 15px;
      border-bottom: 1px solid var(--border);
      display: grid;
      grid-template-columns: 80px 150px 1fr 1fr;
      gap: 15px;
      font-size: 13px;
      align-items: center;
    }

    .activity-item:last-child {
      border-bottom: none;
    }

    .activity-time {
      color: var(--text-secondary);
      font-family: monospace;
    }

    .activity-action {
      background: #5865f2;
      padding: 3px 8px;
      border-radius: 4px;
      font-weight: 600;
      white-space: nowrap;
    }

    .activity-user {
      color: #00d084;
      font-weight: 600;
    }

    .activity-detail {
      color: var(--text-secondary);
    }

    .action-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 15px;
    }

    .action-btn {
      background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 20px 15px;
      text-align: center;
      text-decoration: none;
      color: white;
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      font-size: 14px;
      font-weight: 600;
    }

    .action-btn:hover {
      transform: translateY(-4px);
      border-color: #5865f2;
    }

    .action-btn .icon {
      font-size: 28px;
    }

    @media (max-width: 768px) {
      .server-info-card {
        flex-direction: column;
        text-align: center;
      }

      .info-row {
        justify-content: center;
      }

      .activity-item {
        grid-template-columns: 1fr;
        gap: 5px;
      }
    }
  </style>
</body>
</html>
