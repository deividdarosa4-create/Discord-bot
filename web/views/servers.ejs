<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seleccionar Servidor - Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-primary">
  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar-brand">ðŸŽ® Bot Dashboard</div>
    <div class="navbar-user">
      <% if (user) { %>
        <div class="user-badge">
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar" class="user-avatar">
          <span><%= user.username %></span>
        </div>
        <a href="/auth/logout" class="btn btn-secondary btn-sm">Salir</a>
      <% } %>
    </div>
  </nav>

  <!-- Container -->
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="text-3xl font-bold text-white mb-2">Selecciona un Servidor</h1>
      <p class="text-gray-400">Elige el servidor que deseas administrar</p>
    </div>

    <!-- Grid de Servidores -->
    <div class="servers-grid">
      <% if (guilds && guilds.length > 0) { %>
        <% guilds.forEach(guild => { %>
          <a href="/dashboard/<%= guild.id %>" class="server-card">
            <div class="server-icon">
              <% if (guild.icon) { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" alt="<%= guild.name %>">
              <% } else { %>
                <div class="icon-placeholder"><%= guild.name.charAt(0).toUpperCase() %></div>
              <% } %>
            </div>
            <div class="server-info">
              <h3><%= guild.name %></h3>
              <p class="text-gray-400"><%= guild.approximate_member_count || 0 %> miembros</p>
            </div>
            <div class="server-arrow">â†’</div>
          </a>
        <% }) %>
      <% } else { %>
        <div class="text-center py-10">
          <p class="text-gray-400">No tienes servidores disponibles</p>
        </div>
      <% } %>
    </div>
  </div>

  <style>
    .servers-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .server-card {
      background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
      border-radius: 12px;
      padding: 20px;
      display: flex;
      align-items: center;
      gap: 15px;
      transition: all 0.3s ease;
      text-decoration: none;
      color: inherit;
      border: 2px solid transparent;
    }

    .server-card:hover {
      transform: translateY(-5px);
      border-color: #5865f2;
      background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
    }

    .server-icon {
      flex-shrink: 0;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      overflow: hidden;
      background: #1a1a1a;
    }

    .server-icon img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .icon-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #5865f2, #7289da);
      color: white;
      font-weight: bold;
      font-size: 24px;
    }

    .server-info {
      flex: 1;
    }

    .server-info h3 {
      margin: 0;
      font-size: 16px;
      font-weight: 600;
      color: white;
    }

    .server-info p {
      margin: 5px 0 0;
      font-size: 12px;
    }

    .server-arrow {
      font-size: 20px;
      color: #5865f2;
      transition: transform 0.3s ease;
    }

    .server-card:hover .server-arrow {
      transform: translateX(5px);
    }
  </style>
</body>
</html>
