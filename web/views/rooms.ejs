<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Salas - <%= guild.name %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="navbar-brand">üéÆ Salas</div>
    <div class="navbar-user">
      <a href="/auth/logout" class="btn btn-secondary btn-sm">Salir</a>
    </div>
  </nav>

  <div class="dashboard-wrapper">
    <%- include('sidebar', { guild, guildId: guild.id }) %>

    <main class="main-content">
      <div class="page-header">
        <h1>Gesti√≥n de Salas</h1>
        <p>Crea y gestiona salas para tus jugadores</p>
      </div>

      <div class="section">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
          <h2 class="section-title">Salas Activas</h2>
          <button class="btn btn-primary" onclick="showCreateRoomForm()">+ Crear Sala</button>
        </div>

        <div id="roomsList" class="rooms-list">
          <% if (rooms && rooms.length > 0) { %>
            <% rooms.forEach(room => { %>
              <div class="room-item">
                <div class="room-header">
                  <h3><%= room.name %></h3>
                  <span class="room-status <%= room.is_active ? 'active' : 'inactive' %>">
                    <%= room.is_active ? 'Activa' : 'Inactiva' %>
                  </span>
                </div>
                <p class="room-description"><%= room.description %></p>
                <div class="room-meta">
                  <span>üïê <%= room.open_time %> - <%= room.close_time %></span>
                  <span>üë• <%= room.max_players %> jugadores m√°x</span>
                </div>
                <div class="room-actions">
                  <button class="btn btn-secondary btn-sm" onclick="showRoomPlayers('<%= room.room_id %>')">Ver Jugadores</button>
                  <button class="btn btn-danger btn-sm" onclick="deleteRoom('<%= room.room_id %>')">Eliminar</button>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-gray-400">No hay salas creadas</p>
          <% } %>
        </div>
      </div>

      <!-- Create Room Form -->
      <div id="createRoomForm" style="display: none;" class="section">
        <h2 class="section-title">Crear Nueva Sala</h2>
        <form onsubmit="createRoom(event)">
          <div class="form-group">
            <label>Nombre de la Sala</label>
            <input type="text" id="roomName" placeholder="Ej: Sala Entrenamiento" required>
          </div>

          <div class="form-group">
            <label>Descripci√≥n</label>
            <textarea id="roomDescription" placeholder="Descripci√≥n de la sala" rows="3"></textarea>
          </div>

          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
            <div class="form-group">
              <label>Hora de Apertura</label>
              <input type="time" id="openTime" required>
            </div>

            <div class="form-group">
              <label>Hora de Cierre</label>
              <input type="time" id="closeTime" required>
            </div>
          </div>

          <div class="form-group">
            <label>M√°ximo de Jugadores</label>
            <input type="number" id="maxPlayers" value="50" min="1">
          </div>

          <div>
            <button type="submit" class="btn btn-primary">Crear Sala</button>
            <button type="button" class="btn btn-outline" onclick="hideCreateRoomForm()">Cancelar</button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    const guildId = '<%= guild.id %>';

    function showCreateRoomForm() {
      document.getElementById('createRoomForm').style.display = 'block';
    }

    function hideCreateRoomForm() {
      document.getElementById('createRoomForm').style.display = 'none';
    }

    async function createRoom(e) {
      e.preventDefault();

      const data = {
        name: document.getElementById('roomName').value,
        description: document.getElementById('roomDescription').value,
        open_time: document.getElementById('openTime').value,
        close_time: document.getElementById('closeTime').value,
        max_players: parseInt(document.getElementById('maxPlayers').value)
      };

      try {
        const response = await fetch(`/api/guild/${guildId}/rooms`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          alert('‚úÖ Sala creada correctamente');
          location.reload();
        } else {
          alert('‚ùå Error al crear sala');
        }
      } catch (error) {
        alert('‚ùå Error: ' + error.message);
      }
    }

    async function deleteRoom(roomId) {
      if (!confirm('¬øEst√°s seguro de que deseas eliminar esta sala?')) return;

      try {
        const response = await fetch(`/api/guild/${guildId}/rooms/${roomId}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          alert('‚úÖ Sala eliminada');
          location.reload();
        } else {
          alert('‚ùå Error al eliminar sala');
        }
      } catch (error) {
        alert('‚ùå Error: ' + error.message);
      }
    }

    function showRoomPlayers(roomId) {
      alert('Funci√≥n de visualizar jugadores en desarrollo');
    }
  </script>

  <style>
    .rooms-list {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .room-item {
      background: var(--secondary);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 20px;
      transition: all 0.3s ease;
    }

    .room-item:hover {
      border-color: #5865f2;
      background: #3c3f45;
    }

    .room-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .room-header h3 {
      margin: 0;
      font-size: 16px;
      font-weight: 600;
    }

    .room-status {
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
    }

    .room-status.active {
      background: #1db554;
      color: white;
    }

    .room-status.inactive {
      background: #ed4245;
      color: white;
    }

    .room-description {
      margin: 8px 0;
      font-size: 13px;
      color: var(--text-secondary);
    }

    .room-meta {
      display: flex;
      gap: 20px;
      margin: 12px 0;
      font-size: 12px;
      color: var(--text-secondary);
    }

    .room-actions {
      display: flex;
      gap: 10px;
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid var(--border);
    }
  </style>
</body>
</html>
